{
  "compilerOptions": {
    "jsx": "react-jsx", // Use "react-jsx" for React 17+ or "react" for older versions
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "react",
      "react-dom"
    ],
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}